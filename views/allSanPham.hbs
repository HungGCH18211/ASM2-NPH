    <title>Product Management</title>
     <style>
body, html {
  height: 100%;
  margin: 0;
  font: 400 15px/1.8 "Lato", sans-serif;
  
}
</style>
</head>
<body class = "bg">
 <nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/homepage">ATN</a>
    </div>
    <ul class="nav navbar-nav">
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Management
        <span class="caret"></span></a>
        <ul class="dropdown-menu">
          <li><a href="/Employee">Employees</a></li>
          <li><a href="/SanPham">Products</a></li>
        </ul>
      </li>
    </ul>

    <form class="navbar-form navbar-right" action="/SanPham/search" method="POST">
      <div class="form-group">
        <input type="text" name ="tenSP" class="form-control" placeholder="Search">
      </div>
      <button type="submit" class="btn btn-success" value="Search">Search</button>
    </form>
  </div>
</nav>

    
    <br> <br>
    <div class="container">
    <table class="table table-bordered">
      <thead>
        <tr class="info">
            <td style="text-transform: uppercase">ID</td>
            <td style="text-transform: uppercase">Product's Name</td>
            <td style="text-transform: uppercase">Image</td>
            <td style="text-transform: uppercase">Color</td>
            <td style="text-transform: uppercase">Price</td>
            <td style="text-transform: uppercase">Update</td>
            <td style="text-transform: uppercase">Delete</td>
        </tr>
      </thead>
      <tbody>
        {{# each SanPham}}
        <tr>
            <td>{{_id}}</td>
            <td>{{TenSP}}</td>
            <td><img src='/SanPham/photo/{{_id}}' alt="" Style="width:120px"></td>
            <td>{{Color}}</td>
            <td>{{Price}}</td>  
            <td><a href="/SanPham/edit?id={{_id}}" class="btn btn-primary">Update</a></td>
            <td><a href="/SanPham/delete?id={{_id}}" class="btn btn-danger">Delete</a></td>
        {{/each}}
      </tbody>
    </table>

    <br> <br>
    <form action="/SanPham/insert" method="POST" enctype="multipart/form-data">
    <div class="form-group" style="width: 50%">
      <label for="usr">Name</label>
      <input type="text" class="form-control" id="usr" name="tenSP">
    </div>
    <div class="form-group" style="width: 50%">
      <label for="pwd">Image</label>
      <input class="form-control" type="file" name="picture" accept="image/*">
    </div>
    <div class="form-group" style="width: 50%">
      <label for="pwd">Color</label>
      <input type="text" class="form-control" id="pwd" name="mauSP">
    </div>
    <div class="form-group" style="width: 50%">
      <label for="pwd">Price</label>
      <input type="text" class="form-control" id="pwd" name="giaSP">
    </div>
    <input type="submit" value="Insert Product" class="btn btn-success">
  </form>
  </div>
